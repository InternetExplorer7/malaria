      %ul.title-area
        %li.name
          %h1= link_to "Malaria Assassins", root_url
        %li.toggle-topbar.menu-icon
          %a
            %span
      
      %section.top-bar-section
        %ul.left
          %li
            = link_to "Rules", "rules.html"
          %li
            %a{ href: "http://malaria.buzz", target: '_blank' } About
      
        %ul.right
          -if current_user
            %li
              %a{ href: signout_path }
                Signout as
                = current_user.name
    - if flash[:message]
      .row
        .small-12.columns
          .callout.alert
            %h5 Warning
            %p= flash[:message]
    .row
