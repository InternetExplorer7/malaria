.row
    .small-12.columns
        = render partial: 'shared/stats', locals: { stats: @stats }
.row
    .small-12.columns
        %table
            %thead
                %tr
                    %th School
                    %th Name
                    %th Registered
                    %th Players
                    %th Game Start
                    %th Deaths
                    %th Still Alive
                    %th Last Kill
            %tbody
                - @communities.each do |community|
                    %tr
                        %td= community[:school]
                        %td= community[:name]
                        %td= community[:registered]
                        %td= community[:players]
                        %td= community[:game_start]
                        %td{ style: "color: red" }= "-#{community[:deaths]}"
                        %td= community[:players].to_i - community[:deaths].to_i
                        %td= community[:last_kill]
= render partial: 'users', locals: { users: @users }